</head>

<header>
	<nav>
		<!--<h2><a href="/">{SITE_TITLE}</a></h2> -->
		<a href={`${base}`} class="logo-link"><img alt="Fotograma.ro Logo" class="logo-img" /></a>
		<div class="internal-links">
			<HeaderLink href={`${base}`}>Noutati</HeaderLink>
			<HeaderLink href={`${base}/blog`}>Articole</HeaderLink>
			<HeaderLink href={`${base}/gallery`}>Galerie</HeaderLink>
		</div>
		<button id="theme-toggle" aria-label="Toggle dark mode" class="theme-toggle">
			<svg id="icon-moon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
				<path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278"/>
				<path d="M10.794 3.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.579.924 1.097 1.097l1.162.387a.217.217 0 0 1 0 .412l-1.162.387a1.73 1.73 0 0 0-1.097 1.097l-.387 1.162a.217.217 0 0 1-.412 0l-.387-1.162A1.73 1.73 0 0 0 9.31 6.593l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387a1.73 1.73 0 0 0 1.097-1.097zM13.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.16 1.16 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.16 1.16 0 0 0-.732-.732l-.774-.258a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732z"/>
			</svg>
			<svg id="icon-sun" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16" style="display: none;">
				<path d="M12 8a4 4 0 1 1-8 0 4 4 0 0 1 8 0M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708"/>
			</svg>
		</button>
	</nav>

	<script type="module">
		const button = document.getElementById('theme-toggle');
		const iconSun = document.getElementById('icon-sun');
		const iconMoon = document.getElementById('icon-moon');

		function setIcon() {
		const isDark = document.documentElement.classList.contains('dark');
		if (iconSun && iconMoon) {
			iconSun.style.display = isDark ? 'block' : 'none';
			iconMoon.style.display = isDark ? 'none' : 'block';
		}
		}

		function toggleTheme() {
		document.documentElement.classList.toggle('dark');
		localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
		setIcon();
		}

		// Initial theme load
		const saved = localStorage.getItem('theme');
		if (saved === 'dark') {
			document.documentElement.classList.add('dark');
		} else if(saved === 'light' || (!saved)) {
			document.documentElement.classList.remove('dark');
		}
		setIcon();
		
		if (button) {
			button.addEventListener('click', toggleTheme);
		}
	</script>
</header>
<style>
	header {
		margin: 0 0 0 0;
		padding: 0 1em;
		background: var(--fuji);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
  		top: 0;                  /* stick when it hits the top of the viewport */
  		z-index: 1000;           /* make sure it stays above content */
	}
	h2 {
		margin: 0;
		font-size: 1em;
		color: beige
	}

	a{
		font-size: 1rem;
		text-align: center;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 76px;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		color: beige;
		
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
		color: beige
	}
	.internal-links {
		position: absolute;
  		left: 50%;
		translate: -50%;
		width: 200px;
		display: flex;
		flex-direction: row;
		justify-content: center;
	}

	.theme-toggle {
		background: none;
		border: none;
		color: beige;
		font-size: 1.5em;
		cursor: pointer;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}

	@media (min-width: 412px) {
		a{
			font-size: 1.25rem;
			text-align: center;
		}
	}
</style>
