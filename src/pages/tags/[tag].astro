---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import '../../styles/global.css';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
	const posts = await getCollection('blog');

	const tags = new Set();

	for (const post of posts) {
		const rawTags = post.data.tags;
		const tagList = Array.isArray(rawTags) ? rawTags : rawTags ? [rawTags] : [];
		tagList.forEach(tag => tags.add(tag.toLowerCase()));
	}

	return Array.from(tags).map(tag => ({
		params: { tag },
		props: { tag },
	}));
}

const { tag } = Astro.props;
const allPosts = await getCollection('blog');

const tagLower = String(tag).toLowerCase();

const taggedPosts = allPosts.filter(post => {
	const rawTags = post.data.tags;
	if (!rawTags) return false;

	const tagList = Array.isArray(rawTags) ? rawTags : [rawTags];

	return tagList.some(t => String(t).toLowerCase() === tagLower);
});

const base = import.meta.env.BASE_URL;
---

<style>
.centerer {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	max-width: 640px;
	margin: 0 auto;
	padding: 0px;
}

.tagged-posts-container {
	display: flex;
	flex-direction: column;
	gap: 1em;
	width: 100%;
}

.tagged-post{
	background-color: #e3d3be;
}

.tagged-posts-container a{
	display: flex;
	flex-direction: row;
	text-decoration: none;
	color: var(--accent);
	padding: 1em;
	border-radius: 8px;
	transition: background-color 0.3s ease;
}

.tagged-posts-container img{
	width: 200px;
	height: auto;
	border-radius: 8px;
}

.tagged-post h4{
	margin: 0.25em 1em;		
}

@media (max-width: 720px) {
	.tagged-posts-container {
		gap: 1em;
		align-items: center;
	}
	.tagged-post {
		width: 80%;
	}
	.tagged-posts-container img{
		width: 120px;
	}
	

}
</style>

<Header />
<div class="centerer">
	<h2>Articole cu tagul "{tag}"</h2>
	<div class="tagged-posts-container">
		{taggedPosts.map(post => (
			<a href={`${base}/blog/${post.id}`} class="tagged-post">
				{post.data.heroImage && (
					<Image
						width={480}
						height={120}
						src={post.data.heroImage}
						alt={post.data.title}
						loading="lazy"
					/>
				)}
				<h4>
					{post.data.title}
				</h4>
			</a>
		))}
	</div>
</div>