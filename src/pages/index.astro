---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/home-style.css';
import '../styles/global.css';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import FormattedDate from '../components/FormattedDate.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3); // ðŸ‘ˆ get only the latest 3

const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="ro">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{SITE_TITLE}</title>
</head>
<body>
  <Header />
  	<div class="hero-banner">
      <img src={`${base}/src/assets/testbanner.webp`} alt="Hero Banner" />
    </div>
  <main1>
    <div class="centerer">
	
	  <section class="latest-articles">
		<h2>Cele mai noi articole</h2>
		<div class="latest-articles-box">		
			<ul class="post-grid">
				{
				posts.map((post) => (
					<li>
						<a href={`/blog/${post.id}/`}>
						{post.data.heroImage && (
						<Image width={480} height={120} src={post.data.heroImage} alt="" />
						)}
						<h6>{post.data.title}</h6>
						<p class="date">
						<FormattedDate date={post.data.pubDate} />
						</p>
					</a>
					</li>
				))
				}
			</ul>
		</div>
		</section>

      <section class="reviews-videos">
        <div class="reviews">
          <h3>Review-urile noastre</h3>
          <ul>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
          </ul>
        </div>
        <div class="videos">
          <h3>Videoclipuri populare</h3>
          <ul>
            <li></li>
            <li></li>
            <li></li>
          </ul>
        </div>
      </section>

      <section class="editors-pick">
        <h2><em>Editorâ€™s pick</em></h2>
        <div class="pick-grid">
          <div class="pick-card">
            <img src={`${base}/public/gallery/r7.jpg`} alt="Editorâ€™s pick 1" class="pick-img" />
          </div>
          <div class="pick-card">
            <img src={`${base}/public/gallery/Logo.png`} alt="Editorâ€™s pick 2" class="pick-img" />
          </div>
          <div class="pick-card">
            <img src={`${base}/public/gallery/Voicu Andrei.jpg`} alt="Editorâ€™s pick 3" class="pick-img" />
          </div>
        </div>
      </section>
    </div>
  </main1>
  <Footer />
</body>
</html>