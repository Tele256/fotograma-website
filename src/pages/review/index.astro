---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';
import { Image } from 'astro:assets';

const allPosts = await getCollection('blog');

const taggedPosts = allPosts.filter(post => {
	const rawTags = post.data.tags;
	if (!rawTags) return false;

	const tagList = Array.isArray(rawTags) ? rawTags : [rawTags];

	return tagList.some(t => String(t).toLowerCase() === 'review');
})
.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

const base = import.meta.env.BASE_URL;
---
<!DOCTYPE html>
<html lang="ro">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Review-uri - Fotograma.ro</title>

<style>
.centerer {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	max-width: 640px;
	margin: 0 auto;
	padding: 0px;
}

.tagged-posts-container {
	display: flex;
	flex-direction: column;
	gap: 1em;
	width: 100%;
	color: var(--text1);
}

.tagged-post{
	background-color: var(--card-darker);
}

.tagged-posts-container a{
	display: flex;
	flex-direction: row;
	text-decoration: none;
	color: var(--text1);
	padding: 1em;
	border-radius: 8px;
	transition: background-color 0.3s ease;
}

.tagged-posts-container img{
	width: 200px;
	height: auto;
	border-radius: 8px;
}

.tagged-post h4{
	margin: 0.25em 1em;		
}

@media (max-width: 720px) {
	.tagged-posts-container {
		gap: 1em;
		align-items: center;
	}
	.tagged-post {
		width: 80%;
	}
	.tagged-posts-container img{
		width: 120px;
	}
	

}
</style>
</head>
<body>
	<!-- Google Tag Manager (noscript) -->
	<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N8M4LXLS"
	height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
	<!-- End Google Tag Manager (noscript) -->
<Header />
<div class="centerer">
	<h2>Review-urile noastre</h2>
	<div class="tagged-posts-container">
		{taggedPosts.map(post => (
			<a href={`${base}/blog/${post.id}`} class="tagged-post">
				{post.data.reviewImage && (
					<Image
						width={480}
						height={120}
						src={post.data.reviewImage}
						alt={post.data.title}
						loading="lazy"
					/>
				)}
				<h4>
					{post.data.reviewTitle}
				</h4>
			</a>
		))}
	</div>
</div>
<Footer />
</body>